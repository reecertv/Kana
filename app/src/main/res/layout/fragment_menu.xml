<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/MenuTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="75px"
            android:textColor="@color/fore"
            android:text="Title" />

        <TextView
            android:id="@+id/MenuTextViewTitleLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="@color/fore"
            android:text="Title in Lang" />

        <Button
            android:id="@+id/MenuButtonLearn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/_border"
            android:text="Learn" />

        <Button
            android:id="@+id/MenuButtonTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/_border"
            android:text="Test" />

    </LinearLayout>

</RelativeLayout>